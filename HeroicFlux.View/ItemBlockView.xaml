<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroicFlux.View" x:Class="HeroicFlux.View.ItemBlockView" 
             mc:Ignorable="d" 
             d:DesignHeight="335" d:DesignWidth="711">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <local:BaseItemCardView x:Name="BaseItemView" VerticalAlignment="Top" Width="215" HorizontalAlignment="Left" Margin="5,5,0,5"/>
        <local:WeaponTypeCardView x:Name="WeaponTypeView" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,5"/>
        <local:PropertyCollectionView x:Name="PropertyCollectionView" Grid.Column="2" Margin="5"/>

    </Grid>
</UserControl>
