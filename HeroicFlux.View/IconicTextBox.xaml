<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroicFlux.View" x:Class="HeroicFlux.View.IconicTextBox" 
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="153"             
             x:Name="root">
    <Viewbox x:Name="ViewBox" Stretch="Uniform" StretchDirection="Both" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="{Binding ActualWidth, ElementName=root}">
        <TextBlock x:Name="TheBox" TextWrapping="Wrap" Text="TextBlock" Width="{Binding ActualWidth, ElementName=root}" 
            TextTrimming="None" VerticalAlignment="Top" LineStackingStrategy="BlockLineHeight" Padding="2"  />

    </Viewbox>
</UserControl>
